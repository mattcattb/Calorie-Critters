{
  "name": "nicotine-tracker",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "dev:server": "bun run --filter server dev",
    "dev:app": "bun run --filter app dev",
    "dev:mobile": "bun run --filter mobile dev:expo",
    "build": "bun run --filter '*' build",
    "build:mobile": "bun run --filter mobile build:expo",
    "db:generate": "bun run --filter server db:generate",
    "db:migrate": "bun run --filter server db:migrate",
    "db:studio": "bun run --filter server db:studio"
  }
}
